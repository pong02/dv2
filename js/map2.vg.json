{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": {"left": 175},
  "width": 1000,
  "height": 700,
  "title": {
    "text": "Happiness Map with hours worked to afford a single BigMac",
    "frame": "group"
  },
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
      "format": {"type": "topojson", "feature": "oceans"}
    },
    {
      "name": "source_2",
      "url": "https://raw.githubusercontent.com/pong02/dv2/master/data/mapData.csv",
      "format": {"type": "csv", "delimiter": ","}
    },
    {
      "name": "source_1",
      "url": "https://raw.githubusercontent.com/JiazhouLiu/FIT3179/main/VegaLite/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_0_countries",
        "parse": {}
      },
      "transform": [
        {
          "type": "formula",
          "expr": "datum[\"properties\"] && datum[\"properties\"][\"NAME\"]",
          "as": "properties.NAME"
        }
      ]
    },
    {
      "name": "data_0",
      "source": "source_1",
      "transform": [
        {
          "type": "formula",
          "expr": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_1",
      "transform": [
        {
          "type": "lookup",
          "from": "source_2",
          "key": "Country",
          "fields": ["properties.NAME"],
          "values": ["Score", "borgirHours_start","borgirHours_end"]
        }
      ]
    },
    {
      "name": "data_2",
      "source": "source_2",
      "transform": [
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["Longitude (average)", "Latitude (average)"],
          "as": ["layer_3_x", "layer_3_y"]
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "translate": {"signal": "[width / 2, height / 2]"},
      "type": "equirectangular",
      "center": [105, 20],
      "scale": 601
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "shape",
      "clip": true,
      "style": ["geoshape"],
      "from": {"data": "source_0"},
      "encode": {
        "update": {
          "fill": {"value": "skyblue"},
          "ariaRoleDescription": {"value": "geoshape"}
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_1_marks",
      "type": "shape",
      "clip": true,
      "style": ["geoshape"],
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "fill": {"value": "#ddd"},
          "stroke": {"value": "white"},
          "strokeWidth": {"value": 1},
          "tooltip": {
            "signal": "isValid(datum[\"note\"]) ? datum[\"note\"] : \"\"+datum[\"note\"]"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"note: \" + (isValid(datum[\"note\"]) ? datum[\"note\"] : \"\"+datum[\"note\"])"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_2_marks",
      "type": "shape",
      "clip": true,
      "style": ["geoshape"],
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "Score"},
          "tooltip": {
            "signal": "{\"Country\": isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"], \"Happiness Score\": format(datum[\"Score\"], \"\"), \"Hours Worked to afford a single BigMac\": format(datum[\"borgirHours\"], \"\")}"
          },
          "ariaRoleDescription": {"value": "geoshape"},
          "description": {
            "signal": "\"Score: \" + (format(datum[\"Score\"], \".2s\")) + \"; Country: \" + (isValid(datum[\"properties.NAME\"]) ? datum[\"properties.NAME\"] : \"\"+datum[\"properties.NAME\"]) + \"; Happiness Score: \" + (format(datum[\"Score\"], \"\")) + \"; Hours Worked to afford a single BigMac: \" + (format(datum[\"borgirHours\"], \"\"))"
          }
        }
      },
      "transform": [{"type": "geoshape", "projection": "projection"}]
    },
    {
      "name": "layer_3_marks",
      "type": "arc",
      "clip": true,
      "style": ["arc"],
      "from": {"data": "data_2"},
      "encode": {
        "update": {
          "radius": {"value": 0},
          "tooltip": {"signal": "datum"},
          "fill": {"value": "#4c78a8"},
          "description": {
            "signal": "\"borgirHours: \" + (format(datum[\"borgirHours\"], \"\")) + \"; Longitude (average): \" + (format(datum[\"Longitude (average)\"], \"\")) + \"; Latitude (average): \" + (format(datum[\"Latitude (average)\"], \"\"))"
          },
          "x": {"field": "layer_3_x"},
          "y": {"field": "layer_3_y"},
          "outerRadius": {"value": 0},
          "innerRadius": {"value": 20},
          "startAngle": {"scale": "theta", "field": "borgirHours_start"},
          "endAngle": {"scale": "theta", "field": "borgirHours_end"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "linear",
      "domain": [2.566900015, 7.808700085],
      "range": {"scheme": "yelloworangebrown"},
      "interpolate": "hcl",
      "zero": false
    },
    {
      "name": "theta",
      "type": "linear",
      "domain": [0, 24],
      "range": [0, 6.283185307179586],
      "zero": true
    }
  ],
  "legends": [
    {
      "format": ".2s",
      "title": "Happiness Score",
      "fill": "color",
      "gradientLength": {"signal": "clamp(height, 64, 200)"}
    }
  ]
}