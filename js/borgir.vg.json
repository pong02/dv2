{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Number of BigMacs affordable after 8 hours of work"
    },
    "config": {
        "style": {
            "cell": {
              "stroke": "transparent"
            }
          },
        "mark": {
            "invalid": null
        }
    },
    "width": 850,
    "data": {
        "url": "https://raw.githubusercontent.com/pong02/dv2/master/data/borgirsInADay.json"
    },

    "transform": [{
            "calculate": "{'borgir': 'üçî'}[datum.Symbol]",
            "as": "emoji"
        },
        { "window": [{ "op": "count", "as": "count" }], "groupby": ["Country", "Symbol"] }
    ],

    "mark": { "type": "text" },

    "encoding": {
        "x": { "field": "count", "type": "ordinal", "axis":null},
        "row": { "field": "Country", "header": {"title": null} },
        "text": { "field": "emoji", "type": "nominal" },
        "size": { "value": 30 }
    }

}