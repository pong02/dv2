{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Wage, BigMac and Happiness"
    },
    "data": {
        "url": "https://raw.githubusercontent.com/pong02/dv2/master/data/barData.csv"
    },
    "config": {
        "mark": {
            "invalid": null
        }
    },
    "repeat": {
        "layer": [
            "Wage-USD",
            "price"
        ]
    },
    "spec": {
        "encoding": {
            "y": {
                "type": "quantitative"
            },
            "x": {
                "type": "nominal"
            },
            "color": {
                "type": "nominal",
                "scale": {"domain": ["Hourly wage", "BigMac price"], "range": ["#DA291C", "#FFC72C"]}
              }
        },
        "width":850,
        "layer": [
            {
                "mark": {
                    "type": "bar",
                    "xOffset": 15,
                    "size": 30
                },
                "encoding": {
                    "x": {
                        "field": "Country",
                        "type": "nominal",
                        "title": null,
                        "axis": {
                            "labelOffset": 2
                        }
                    },
                    "y": {
                        "field": "Wage-USD",
                        "type": "quantitative",
                        "axis": {
                            "title": "USD",
                            "ticks": false
                        }
                    },
                    "color": {"datum": "Hourly wage"}
                }
            },
            {
                "mark": {
                    "type": "bar",
                    "size": 30,
                    "xOffset": -15
                },
                "encoding": {
                    "x": {
                        "field": "Country",
                        "type": "nominal",
                        "title": null,
                        "axis": {
                            "labelOffset": 2
                        }
                    },
                    "y": {
                        "field": "price",
                        "type": "quantitative",
                        "axis": {
                            "title": "USD",
                            "ticks": false
                        }
                    },
                    "color": {"datum": "BigMac price"}
                }
            }
        ]
    }
}