{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "Wage, BigMac and Happiness" },
    "data": {
        "url": "https://raw.githubusercontent.com/pong02/dv2/master/data/barData.csv"        
    },
    "repeat": {"layer": ["Wage-USD", "price"]},
    "spec":{
        "mark": "bar",
        "encoding": {
            "x": { "field": "Country", "type": "nominal", "title": "South East Asian countries" },
            "y": { "field": {"repeat": "layer"}, "type": "quantitative", "title": "USD" },
            "color": {"datum": {"repeat": "layer"}, "title": "Gross"}
        }
    },
    "config": {
        "mark": {"invalid": null}
    }
}